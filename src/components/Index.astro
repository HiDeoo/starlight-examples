---
import { LinkCard } from '@astrojs/starlight/components';
import { getCollection } from 'astro:content';
import FluidGrid from './FluidGrid.astro';

const demos = await getCollection('docs', (entry) => entry.slug.startsWith('demos/'));
---

<FluidGrid>
	{
		demos.map((demo) => (
			<LinkCard
				title={demo.data.title}
				description={demo.data.description}
				href={'/' + demo.slug}
			/>
		))
	}
</FluidGrid>
